<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD com.example.Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dubbo.provider.mapper.UserKCMapper">
    <resultMap id="result" type="com.dubbo.api.model.UserKC">
        <id property="id" column="sid"></id>
        <result property="kc" column="kc" />

        <collection property="search" ofType="com.dubbo.api.model.Search" column="id">
            <id property="id" column="id"></id>
            <result property="title" column="title" />
            <result property="content" column="content" />
            <result property="author" column="author" />
            <result property="level" column="level" />
            <result property="sc" column="sc" />
            <result property="src" column="src" />
            <result property="url" column="url"></result>

        </collection>

    </resultMap>

    <insert id="insertkc">
        insert into userkc values(${id},${kc})
    </insert>

    <select id="getuserk" resultMap="result">
        select a.id as sid,a.kc,b.* from userkc a join search b on a.kc=b.id where a.id=${id}
    </select>

    <delete id="deletekc">
        delete from userkc where id=${id} and kc=${kc}
    </delete>

    <update id="updateSearch1">
         update search set sc=sc+1 where id=${id}
    </update>

    <update id="updateSearch2">
         update search set sc=sc-1 where id=${id}
    </update>
</mapper>